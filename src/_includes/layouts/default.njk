{%- set metaTitle -%}
    {%- if not title -%}{{ site.title }} - {{ site.description | safe }}
    {%- else -%}{{ title | safe }} | {{ site.title }}
    {%- endif -%}
{%- endset -%}
{%- set metaDesc -%}
    {%- if not description -%}{{ site.description | safe }}
    {%- else -%}{{ description | safe }}
    {%- endif -%}
{%- endset -%}
{%- set metaKeywords -%}
    {%- if tags -%}{%- for tag in tags -%}{{ tag }},{%- endfor -%}{%- endif -%}
    {%- if site.keywords -%}
        {%- for keyword in site.keywords -%}
            {{ keyword }}{%- if not loop.last %},{% endif -%}
        {%- endfor -%}
    {%- endif -%}
{%- endset -%}
<!DOCTYPE html>
<html>
    
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ metaTitle }}</title>
    <meta name="title" content="{{ metaTitle }}">
    <meta name="description" content="{{ metaDesc }}">
    <meta name="keywords" content="{{ metaKeywords }}">
    <meta name="author" content="{{ author.name }}">
    <meta name="robots" content="index, follow">
    <link rel="authorization_endpoint" href="https://indieauth.com/auth">
    <link rel="me" href="https://mastodon.social/@inside_the_dugout">
    <link href="https://github.com/johndillinger15" rel="me">
    <link rel="webmention" href="https://webmention.io/inside-the-dugout.de/webmention" />
    <link rel="canonical" href="{{ site.url | url }}{{ page.url }}">
    <link rel="shortcut icon" type="image/png" href="{{ '/assets/img/favicon.png' | url }}">
    <link rel="apple-touch-icon" href="{{ '/assets/img/apple-touch-icon.png' | url }}">
    <link rel="stylesheet" href="{{ '/assets/css/main.css' | url }}">
    <link rel="alternate" type="application/rss+xml" title="Inside The Dugout RSS Feed" href="/feed.rss" />
    <script defer src="https://cloud.umami.is/script.js" data-website-id="2b4fe8ab-cd7c-4ebc-b94d-ee691cd76a81" data-domains="inside-the-dugout.de"></script>
</head>	

<body class="flex flex-col h-screen bg-white text-slate-800 break-words">
    {% include "partials/header.njk" %}
    <main class="mx-7 lg:mx-6 mt-32 grow">
        {% if layout === "post" %}
        {{ content | safe }}
        {% else %}
        <div class="max-w-5xl mx-auto">
            {{ content | safe }}
        </div>
        {% endif %}
    </main>
    {% include "partials/footer.njk" %}
    <script src="{{ '/assets/js/bundle.js' | url }}"></script>
</body>

</html>