<header id="header"
  class="bg-white w-full px-6 py-5 z-50 fixed top-0 shadow-md transition-all duration-300">

  <div class="max-w-5xl mx-auto flex items-center justify-between">
    <!-- Logo -->
    <a href="{{ '/' | url }}" class="flex items-center space-x-3">
      <img src="/assets/img/Inside_the_Dugout_Logo.png" alt="Site Logo" class="h-10">
      <span class="text-xl text-teal-700 font-semibold">
        {{ site.title }}
      </span>
    </a>

    <!-- Desktop menu -->
    <nav class="hidden md:flex space-x-6 items-center">
      {% for item in menu %}
      <a href="{{ item.url | url }}"
         {% if item.newTab %}target="_blank" rel="noopener"{% endif %}
         class="text-base font-medium text-slate-700 hover:text-teal-600">
        {{ item.label }}
      </a>
      {% endfor %}
    </nav>

    <!-- Mobile toggle -->
    <button id="menu-toggle"
      class="md:hidden text-slate-700 hover:text-teal-600 focus:outline-none">
      {% include "icons/menu.svg" %}
    </button>
  </div>

  <!-- Mobile menu -->
  <nav id="mobile-menu"
    class="md:hidden hidden bg-white border-t border-slate-200">
    <div class="flex flex-col px-6 py-4 space-y-4">
      {% for item in menu %}
      <a href="{{ item.url | url }}"
         {% if item.newTab %}target="_blank" rel="noopener"{% endif %}
         class="text-base font-medium text-slate-700 hover:text-teal-600">
        {{ item.label }}
      </a>
      {% endfor %}
    </div>
  </nav>
</header>
