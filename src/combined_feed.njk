---
permalink: /combined_feed.xml
layout: false
eleventyExcludeFromCollections: true
---

<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Inside The Dugout â€“ Alle Updates</title>
    <description>
      Blog posts und Shortposts auf Inside The Dugout.
    </description>

    <link>{{ site.url }}/</link>

    <atom:link
      href="{{ site.url }}/combined_feed.xml"
      rel="self"
      type="application/rss+xml" />

    {% for post in collections.combined %}
    <item>
      <title>
        {% if post.data.title %}
          {{ post.data.title }}
        {% else %}
          {{ post.templateContent | striptags | truncate(60, true) }}
        {% endif %}
      </title>

      <link>{{ site.url }}{{ post.url }}</link>
      <guid>{{ site.url }}{{ post.url }}</guid>
      <pubDate>{{ post.date.toUTCString() }}</pubDate>

      <description><![CDATA[
        {{ post.templateContent | safe }}
      ]]></description>
    </item>
    {% endfor %}
  </channel>
</rss>
