---
permalink: /shortposts/feed.xml
layout: false
eleventyExcludeFromCollections: true
---

<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Inside The Dugout â€“ Shortposts</title>
    <description>Short updates and notes published on Inside The Dugout.</description>
    <link>{{ site.url }}/shortposts/</link>
    <atom:link href="{{ site.url }}/shortposts/feed.xml"
               rel="self"
               type="application/rss+xml" />

    {% for post in collections.shortposts %}
    <item>
      <title>
        {{ post.templateContent | striptags | truncate(60, true) }}
      </title>

      <link>{{ site.url }}{{ post.url }}</link>
      <guid>{{ site.url }}{{ post.url }}</guid>

      <pubDate>{{ post.date.toUTCString() }}</pubDate>

      <description><![CDATA[
            {{ post.content | safe }}
        ]]></description>

    </item>
    {% endfor %}

  </channel>
</rss>
