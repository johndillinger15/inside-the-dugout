<style>
  .linktree-wrapper {
    max-width: 520px;
    margin: 0 auto;
    padding: 2rem 1rem 3rem;
    text-align: center;
  }

  .linktree-wrapper h1 {
    margin-bottom: 2rem;
    font-weight: 600;
  }

  .linktree-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;

    width: 100%;
    padding: 0.9rem 1.2rem;
    margin-bottom: 1rem;

    border-radius: 14px;
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;

    background: #f4f4f5;
    color: #222;

    transition: transform 0.15s ease, box-shadow 0.15s ease, background 0.15s ease;
  }

  .linktree-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
  }

  .linktree-link img {
    width: 20px;
    height: 20px;
    opacity: 0.85;
  }

  /* Softer Brand Accents (border-left highlight instead of full color background) */
  .discord   { border-left: 4px solid #7C83D6; }
  .newsletter{ border-left: 4px solid #6BBAD9; }
  .rss       { border-left: 4px solid #F2B66D; }
  .instagram { border-left: 4px solid #E88AA3; }
  .bluesky   { border-left: 4px solid #6FAFF5; }
  .mastodon  { border-left: 4px solid #9A9BEF; }

  @media (max-width: 480px) {
    .linktree-link {
      font-size: 0.95rem;
      padding: 0.8rem 1rem;
    }
  }
</style>

<div class="linktree-wrapper">
  <h1>Connect with Us</h1>

  {% if social.discord %}
  <a href="{{ social.discord }}" class="linktree-link discord" target="_blank">
    <img src="https://simpleicons.org/icons/discord.svg" alt="Discord">
    Discord Server
  </a>
  {% endif %}

  <a href="https://steady.page/de/inside-the-dugout/newsletter/sign_up"
     class="linktree-link newsletter"
     target="_blank">
    <img src="https://simpleicons.org/icons/minutemailer.svg" alt="Newsletter">
    Newsletter
  </a>

  {% if social.rss %}
  <a href="{{ social.rss }}" class="linktree-link rss" target="_blank">
    <img src="https://simpleicons.org/icons/rss.svg" alt="RSS Feed">
    RSS Feed
  </a>
  {% endif %}

  {% if social.instagram %}
  <a href="{{ social.instagram }}" class="linktree-link instagram" target="_blank">
    <img src="https://simpleicons.org/icons/instagram.svg" alt="Instagram">
    Instagram
  </a>
  {% endif %}

  {% if social.bluesky %}
  <a href="{{ social.bluesky }}" class="linktree-link bluesky" target="_blank">
    <img src="https://simpleicons.org/icons/bluesky.svg" alt="Bluesky">
    Bluesky
  </a>
  {% endif %}

  {% if social.mastodon %}
  <a href="{{ social.mastodon }}" class="linktree-link mastodon" target="_blank">
    <img src="https://simpleicons.org/icons/mastodon.svg" alt="Mastodon">
    Mastodon
  </a>
  {% endif %}
</div>
