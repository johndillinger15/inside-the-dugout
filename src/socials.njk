<style>
  .linktree-wrapper {
    max-width: 520px;
    margin: 0 auto;
    padding: 2rem 1rem 3rem;
    text-align: center;
  }

  .linktree-wrapper h1 {
    margin-bottom: 2rem;
    font-weight: 600;
  }

  .linktree-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;

    width: 100%;
    padding: 0.7rem 1.1rem;   /* reduced height */
    margin-bottom: 0.7rem;    /* tighter spacing */

    border-radius: 10px;      /* slightly less rounded */
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;

    color: #ffffff;

    transition: transform 0.15s ease, box-shadow 0.15s ease, filter 0.15s ease;
  }

  .linktree-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    filter: brightness(1.05);
  }

  .linktree-link img {
    width: 20px;
    height: 20px;
    filter: brightness(0) invert(1);
    opacity: 0.95;
  }

  /* Muted Brand Colors */
  .discord   { background: #6E75C9; }
  .newsletter{ background: #5DAFC8; }
  .rss       { background: #E6A85C; }
  .instagram { background: #D97A92; }
  .bluesky   { background: #5C9FE6; }
  .mastodon  { background: #8687D9; }

  @media (max-width: 480px) {
    .linktree-link {
      font-size: 0.95rem;
      padding: 0.85rem 1rem;
    }
  }
</style>

<div class="linktree-wrapper">
  <h2>Connect with Us</h2>

  {% if social.discord %}
  <a href="{{ social.discord }}" class="linktree-link discord" target="_blank">
    <img src="https://simpleicons.org/icons/discord.svg" alt="Discord">
    Discord Server
  </a>
  {% endif %}

  <a href="https://steady.page/de/inside-the-dugout/newsletter/sign_up"
     class="linktree-link newsletter"
     target="_blank">
    <img src="https://simpleicons.org/icons/minutemailer.svg" alt="Newsletter">
    Newsletter
  </a>

  {% if social.rss %}
  <a href="{{ social.rss }}" class="linktree-link rss" target="_blank">
    <img src="https://simpleicons.org/icons/rss.svg" alt="RSS Feed">
    RSS Feed
  </a>
  {% endif %}

  {% if social.instagram %}
  <a href="{{ social.instagram }}" class="linktree-link instagram" target="_blank">
    <img src="https://simpleicons.org/icons/instagram.svg" alt="Instagram">
    Instagram
  </a>
  {% endif %}

  {% if social.bluesky %}
  <a href="{{ social.bluesky }}" class="linktree-link bluesky" target="_blank">
    <img src="https://simpleicons.org/icons/bluesky.svg" alt="Bluesky">
    Bluesky
  </a>
  {% endif %}

  {% if social.mastodon %}
  <a href="{{ social.mastodon }}" class="linktree-link mastodon" target="_blank">
    <img src="https://simpleicons.org/icons/mastodon.svg" alt="Mastodon">
    Mastodon
  </a>
  {% endif %}
</div>
